<%= simple_form_for member, html: { class: 'form-horizontal col-md-6' },wrapper: :horizontal_form  do |f| %>
  <%= f.error_notification %>
  <%= f.input :last_name %>
  <%= f.input :first_name, label: 'First Name' %>
  <%= f.input :middle_initial %>
  <%= f.input :id_number %>
  <%= f.input :date_of_birth %>
    <%= f.input :gender,:collection => [[true, 'M'], [false, 'F']], 
          :label_method => :last, 
          :value_method => :first,
          :as => :radio_buttons, 
          :item_wrapper_class => 'inline',
          :checked => true %>
    <%= f.input :home_number %>
    <%= f.input :cell_number %>
    <%= f.input :address %>
    <%= f.input :alternate_address %>
    <%= f.input :date_of_enrollment %>
    <%= f.input :date_of_disenrollment %>
    <%= f.input :line_of_business %>
    <%= f.input :primary_language %>
    <%= f.input :interpreter_needed %>
    <%= f.input :ethnicity %>
    <%= f.input :marital_status %>
  <%= f.button :submit %>
<% end %>
